{
  "name": "Claude Code DevContainer (Multi-stage)",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "AZTFEXPORT_VERSION": "0.18.0"
    }
  },
  
  "features": {},
  
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          }
        },
        "editor.formatOnSave": false,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,
        "azure.tenant": "${localEnv:AZURE_TENANT_ID}",
        "terraform.indexing": {
          "enabled": true,
          "liveIndexing": true
        },
        "terraform.languageServer": {
          "enabled": true
        },
        "files.associations": {
          "*.tf": "terraform",
          "*.tfvars": "terraform",
          "*.hcl": "terraform",
          "*.azcli": "shellscript"
        },
        "files.exclude": {
          "**/.terraform": true,
          "**/*.tfstate*": true,
          "**/.DS_Store": true
        }
      },
      "extensions": [
        "ms-azuretools.vscode-azureresourcegroups",
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "rooveterinaryinc.roo-cline",
        "yzhang.markdown-all-in-one"
      ]
    }
  },

  "forwardPorts": [8080, 10000, 10001, 10002],
  "portsAttributes": {
    "8080": {
      "label": "Web App",
      "onAutoForward": "notify"
    },
    "10000": {
      "label": "Azurite Blob",
      "onAutoForward": "silent"
    },
    "10001": {
      "label": "Azurite Queue", 
      "onAutoForward": "silent"
    },
    "10002": {
      "label": "Azurite Table",
      "onAutoForward": "silent"
    }
  },

  "remoteEnv": {
    "AZURE_DEV_ENVIRONMENT": "true",
    "TF_CLI_CONFIG_FILE": "${containerWorkspaceFolder}/.terraform.rc",
    "HTTP_PROXY": "${localEnv:HTTP_PROXY}",
    "HTTPS_PROXY": "${localEnv:HTTPS_PROXY}",
    "NO_PROXY": "${localEnv:NO_PROXY}"
  },

  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/cache/azure,target=/home/vscode/.azure,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/cache/terraform,target=/home/vscode/.terraform.d,type=bind,consistency=cached",
    "source=/,target=/host,type=bind,consistency=cached",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig-host,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.azure,target=/home/vscode/.azure-host,type=bind,consistency=cached"
  ],

  "postCreateCommand": ".devcontainer/scripts/post-create.sh",
  "postStartCommand": ".devcontainer/scripts/post-start.sh",
  "postAttachCommand": "sed 's/\\r$//' .devcontainer/scripts/check-versions | bash",

  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "shutdownAction": "stopContainer",

  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  }
}